<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingJadwalActivity">

    <TextView
        android:id="@+id/tv_pilih_tanggal_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:textColor="?attr/colorOnSecondary"
        android:text="Pilih Tanggal"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/card_calender"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pilih_tanggal_2">

        <CalendarView
            android:id="@+id/calendar_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:selectedWeekBackgroundColor="?attr/colorOnSecondary"
            android:background="?attr/colorPrimary" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_pilih_waktu_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSecondary"
        android:text="Pilih Waktu"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_calender" />

    <LinearLayout
        android:id="@+id/layout_time_picker_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="?attr/colorOnSecondary"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_pilih_waktu_2">

        <NumberPicker
            android:id="@+id/number_picker_jam_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="24sp" />

        <NumberPicker
            android:id="@+id/number_picker_menit_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/select_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_time_picker_2">

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="0dp"
            android:textColor="?attr/colorOnSecondary"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SIMPAN" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>